{
  "connection": "default",
  "collectionName": "blog_posts",
  "info": {
    "name": "Blog post"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "post_dynamic": {
      "type": "dynamiczone",
      "components": [
        "blog-post.text-block",
        "blog-post.image-collection",
        "blog-post.image-single"
      ]
    },
    "blog_categories": {
      "via": "blog_posts",
      "collection": "blog-category"
    },
    "featured_image": {
      "model": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "description": {
      "type": "text"
    }
  }
}
